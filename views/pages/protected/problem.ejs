<!DOCTYPE html>
<html lang="en">

<head>
    <title>Problems - LCC Online Judge</title>
    <meta charset="utf-8">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="/select2/css/select2.min.css">
    <!-- Select2 Bootstrap theme -->
    <link rel="stylesheet" href="/select2/css/select2-bootstrap.min.css">
    <!-- Global custom styles -->
    <link rel="stylesheet" href="/css/main.css">
    <!-- Custom styles -->
    <link rel="stylesheet" href="/css/problem.css">
</head>

<body>
    <div class="container">

        <!-- Header include -->
        <%- include("../../partials/protected/header.ejs", { pageName: "problems" }); %>

            <!-- Content -->
            <div class="jumbotron">
                <h1 id="problem-name" class="text-center">Loading problem...</h1>
                <hr>
                <div class="row">

                    <!-- Problem info -->
                    <div class="col-sm-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 id="problem-info" class="text-center">Loading problem...</h4>
                            </div>
                            <div id="problem-statement" class="panel-body">
                            </div>
                        </div>

                        <!-- Tab nav bar -->
                        <div id="tabs" class="row">
                            <ul id="tabs-list" class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="active"><a id="solve-tab" href="#solve" aria-controls="solve" role="tab" data-toggle="tab">Editor</a></li>
                                <li role="presentation"><a id="solution-tab" href="#solutions" aria-controls="profile" role="tab" data-toggle="tab">Solutions</a></li>
                            </ul>
                        </div>

                        <!-- Tab panes -->
                        <div class="tab-content">

                            <!-- Editor tab -->
                            <div role="tabpanel" class="tab-pane active" id="solve">
                                <br>
                                <!-- Editor controls -->
                                <div class="row">
                                    <!-- Languages dropdown -->
                                    <div class="col-sm-6">
                                        <div class="dropdown">
                                            <button class="btn btn-default dropdown-toggle" id="lang-button" type="button" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">
                                                Loading languages...
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu" id="lang-dropdown-list" aria-labelledby="lang-button">
                                                <li>Loading languages...</li>
                                            </ul>
                                        </div>
                                    </div>

                                    <!-- Submit button -->
                                    <div class="col-sm-2 col-sm-offset-4">
                                        <button class="btn btn-success pull-right" id="submit-button">Submit Code</button>
                                    </div>
                                </div>

                                <br>

                                <!-- Editor -->
                                <pre id="editor"></pre>
                            </div>
                            <!-- End editor tab -->

                            <!-- Solutions tab -->
                            <div role="tabpanel" class="tab-pane" id="solutions">
                                <div class="col-sm-offset-3 col-sm-6">
                                    <div class="panel-heading">
                                        <h3 class="text-center">Your Submissions</h3>
                                    </div>
                                    <div class="panel-body">
                                        <ul id="solutions-list" class="list-group">
                                            <li class="list-group-item" id="loading-submission">
                                                <h4 class="list-group-item-heading">Loading submissions...</h4>
                                                <p class="list-group-item-text">Loading submissions...</p>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!-- End solutions tab -->
                        </div>
                    </div>
                </div>

                <hr>

                <!-- Comments -->
                <%- include("../../partials/protected/comments.ejs", { username: user.grader.username, type: "problem" }); %>
            </div>

            <!-- Results modal -->
            <div class="modal fade" id="result-modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title">Submission Results</h2>
                        </div>
                        <div class="modal-body">
                            <h4 class="text-center" id="submission-status">Sending code to server...</h4>
                        </div>
                    </div>
                </div>
            </div>

    </div>

    <!-- Scripts -->
    <!-- jQuery -->
    <script src="/jquery-3.1.0.min.js"></script>
    <!-- Bootstrap -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <!-- List.js -->
    <script src="/js/list.min.js"></script>
    <!-- Select2 -->
    <script src="/select2/js/select2.min.js"></script>
    <!-- Socket.io -->
    <script src="http://localhost:8081/socket.io/socket.io.js"></script>
    <script src="/js/socket.io/index.js"></script>
    <!-- MathJax -->
    <script src='https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML'></script>
    <!-- Marked -->
    <script src="/marked.min.js"></script>
    <!-- MathJax -->
    <script type="text/javascript" src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
    <!-- MathJax configuration -->
    <script type="text/x-mathjax-config">
        MathJax.Hub.Config({
        tex2jax: {
            inlineMath: [['$','$'], ['\\(','\\)']],
            displayMath: [['$$','$$'], ['\[','\]']],
            processEscapes: true,
            processEnvironments: true,
            skipTags: ['script', 'noscript', 'style', 'textarea', 'pre'],
            TeX: { equationNumbers: { autoNumber: "AMS" },
                extensions: ["AMSmath.js", "AMSsymbols.js"] }
        }
        });
    </script>
    <!-- Parse MathJax -->
    <script type="text/x-mathjax-config">
        MathJax.Hub.Queue(function() {
            var all = MathJax.Hub.getAllJax(), i;
            for(i = 0; i < all.length; i += 1) {
                all[i].SourceElement().parentNode.className += ' has-jax';
            }
        });
    </script>
    <!-- Problem ID -->
    <script>
        var pid = "<%= pid %>";
    </script>
    <!-- Problem list scripts -->
    <script src="/js/problem.js"></script>
    <!-- Comments scripts -->
    <script src="/js/comments.js"></script>
</body>

</html>